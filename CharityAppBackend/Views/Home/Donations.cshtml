@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<CharityAppBackend.Models.Donate>



<div class="d-flex flex-row justify-content-around" style="max-height : 200px;">
    @foreach (var donate in Model)
    {

        <div class="text-center card p-4">
            <img src="@donate.ImgPath" alt="." style="height: 100px; width : 100px;" />
            <p class="mb-1">@donate.Name</p>
            <a class="btn btn-info" href="#" data-toggle="modal" data-target="#exampleModal">Donate</a>
        </div>
    }
</div>




<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Donate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <div class="col">
                            <input class="form-control" type="tel" inputmode="numeric" pattern="[0-9\s]{13,19}" autocomplete="cc-number" maxlength="19" placeholder="xxxx xxxx xxxx xxxx">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" maxlength="5" placeholder="Date">
                        </div>
                        <div class="col">
                            <input type="password" class="form-control" maxlength="3" placeholder="CVC Code">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Pay</button>
            </div>
        </div>
    </div>
</div>

